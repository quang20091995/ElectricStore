                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <input class="form-control" id="graphics" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            RAM
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <select class="form-control ram" id="ram">
                            <option value="#">Chọn RAM</option>
                            <option value="4GB">4 GB</option>
                            <option value="8GB">8 GB</option>
                            <option value="16GB">16 GB</option>
                            <option value="32GB">32 GB</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Loại ổ đĩa
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <select class="form-control ram" id="disc">
                            <option value="#">Chọn loại ổ đĩa</option>
                            <option value="SSD+HDD">SSD+HDD</option>
                            <option value="SSD">SSD</option>
                            <option value="HDD">HDD</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Bộ nhớ
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <input type="number" class="form-control" id="capacity" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Thông tin bộ nhớ
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <input class="form-control" id="hardware" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Cỡ màn hình
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <select class="form-control" id="monitor-size">
                            <option value="#">Chọn cỡ màn hình</option>
                            <option value="12">12</option>
                            <option value="13">13</option>
                            <option value="13.3">13.3</option>
                            <option value="14">14</option>
                            <option value="15.6">15.6</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
