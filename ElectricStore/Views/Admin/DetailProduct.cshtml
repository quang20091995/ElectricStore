<link href="~/Content/Admin/source/css/productdetail.css" rel="stylesheet" />

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="heading">
    <div class="row">
        <div class="col-xs-2 page-name">
            Thêm sản phẩm mới
        </div>
        <div class="col-xs-3" >
            <a href="@Url.Action("ManageProducts","Admin")" style="color: #0076bb">
                <i class="fa fa-arrow-circle-left"></i>
                Quay lại trang sản phẩm
            </a>
        </div>
        <div class="col-xs-7 text-right">
            <button class="btn bg-blue">
                <i class="fa fa-floppy-o" id="add-product-btn"> Lưu</i>
            </button>
            <button class="btn bg-blue">
                <i class="fa fa-floppy-o"> Lưu và tiếp tục sửa</i>
            </button>
        </div>
    </div>
</div>

<div class="add-product-area">
    <div class="product-info">
        <div class="product-info-head head-title row">
            <div class="icon-container col-xs-3">
                <span class="glyphicon glyphicon-info-sign"></span>
                <span class="title">Thông tin sản phẩm</span>
            </div>
            <i class="open-close-1 toggle-icon glyphicon glyphicon-plus col-xs-9 text-right" data-toggle="collapse" data-target="#info-area"></i>
        </div>

        <div class="form-horizontal collapse" id="info-area">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Tên sản phẩm
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <input class="form-control" id="product_name"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Danh mục SP
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <select class="form-control category" id="category">
                            <option>Chọn danh mục</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Hãng
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <select class="form-control company" id="company">
                            <option>Chọn công ty</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Giá SP
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <input type="number" class="form-control" id="price" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Trạng thái SP
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7" style="margin-top: 3px;">
                        <input type="checkbox" id="stock-status" name="stock-status">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="add-image-area">
        <div class="product-info-head head-title row">
            <div class="icon-container col-xs-3">
                <span class="glyphicon glyphicon-picture"></span>
                <span class="title">Hình ảnh</span>
            </div>
            <i class="open-close-2 toggle-icon glyphicon glyphicon-plus col-xs-9 text-right" data-toggle="collapse" data-target="#image-area"></i>
        </div>
        <div class="collapse" id="image-area">
            <div class="text-area">Cần phải lưu sản phẩm này trước khi thêm hình ảnh</div>
        </div>
    </div>

    <div class="info-advanced-area">
        <div class="head-title row">
            <div class="icon-container col-xs-3">
                <span class="fa fa-paperclip"></span>
                <span class="title">Thông tin chi tiết sản phẩm</span>
            </div>
            <i class="open-close-3 toggle-icon glyphicon glyphicon-plus col-xs-9 text-right" data-toggle="collapse" data-target="#product-detail-area"></i>
        </div>

        <div class="form-horizontal collapse" id="product-detail-area">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Bộ vi xử lý
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <input class="form-control" id="micro-processor" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Tốc độ
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <input class="form-control" id="speed" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Vi xử lý
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <select class="form-control" id="core">
                            <option value="#">Chọn vi xử lý</option>
                            <option value="AMD3">AMD 3</option>
                            <option value="AMD5">AMD 5</option>
                            <option value="AMD7">AMD 7</option>
                            <option value="Corei3">Core i3</option>
                            <option value="Corei5">Core i5</option>
                            <option value="Corei7">Core i7</option>
                            <option value="Corei9">Core i9</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Đồ họa
