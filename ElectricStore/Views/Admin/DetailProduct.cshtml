                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <textarea class="form-control" id="description"></textarea>
                    </div>
                </div>
            </div>
