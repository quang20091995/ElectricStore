    <div class="add-image-area">

        <div class="product-info-head head-title row">
            <div class="icon-container col-xs-3">
                <span class="glyphicon glyphicon-picture"></span>
                <span class="title">Hình ảnh</span>
            </div>
            <i class="open-close-2 toggle-icon glyphicon glyphicon-plus col-xs-9 text-right"></i>
        </div>
        <div class="form-horizontal" id="image-area">
            <div class="text-area">Cần phải lưu sản phẩm này trước khi thêm hình ảnh</div>
            <div class="form-group">
                <div class="col-md-3 label-wrapper">
                    <label class="control-label">
                        Hình ảnh
                    </label>
                    <div title="" data-toggle="tooltip" class="ico-help">
                        <i class="fa fa-question-circle"></i>
                    </div>
                </div>
                <form class="col-md-9" method="post" enctype="multipart/form-data">
                    <img class="preview-image" src="~/Content/Admin/source/images/image_default.jpg" width="100" height="100" />
                    <label class="btn btn-danger btn-file">
                        <input type="file" style="display: none;" accept="image/png, image/jpeg, image/gif" /> Chọn ảnh
                    </label>
                    <script type="text/javascript">
                        function readURL(input) {
                            if (input.files && input.files[0]) {
                                var reader = new FileReader();

                                reader.onload = function (e) {
                                    $('.preview-image').attr('src', e.target.result);
                                }
                                reader.readAsDataURL(input.files[0]);
                            }
                        }
                        $('.btn-file input[type=file]').change(function () {
                            readURL(this);
                        });
                    </script>
                    <button class="btn btn-success">Xác nhận</button>
                </form>
            </div>
            <div class="text-area">Danh sách ảnh đang tồn tại</div>
            <table class="table table-bordered table-image-list" id="table-image-list">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên ảnh</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

