                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <select class="form-control company" id="company">
                            <option value="0" selected>Chọn công ty</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 label-wrapper">
                        <label class="control-label">
                            Giá SP
                        </label>
                        <div title="The customer's email." data-toggle="tooltip" class="ico-help">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <input type="number" class="form-control" id="price" />
                    </div>
